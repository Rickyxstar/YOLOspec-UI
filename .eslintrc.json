{
    "env": {
        "browser": true,
        "es2020": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "@typescript-eslint"
    ],
    "rules": {
        "react/jsx-filename-extension": [
            1,
            {
                "extensions": [
                    ".tsx"
                ]
            }
        ],
        "import/extensions": ["error", "ignorePackages", {
            "jsx": "never",
            "ts": "never",
            "tsx": "never"
        }],
        "no-unused-vars": "off",
        "@typescript-eslint/no-unused-vars": ["error"],
        "semi": "off",
        "@typescript-eslint/semi": ["error"]
    },
    "settings": {
        "import/resolver": {
            "typescript": {}
        }
    }
}